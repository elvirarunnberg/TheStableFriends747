<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheStableFriends747.Views.CreateNewHorsePage"
             Title="CreateNewHorsePage">
    <VerticalStackLayout>
        
        <Entry
    x:Name="HorseNameEntry"
    Placeholder="Hästnamn"></Entry>
        <Entry    
    x:Name="OwnerNameEntry"
    Placeholder="Ägare"></Entry>
        <Entry
    x:Name="PhoneNumberEntry"
    Placeholder="Telefonnummer"
    Keyboard="Telephone"></Entry>
   
        <Entry
    x:Name="DescriptionEntry"
    Placeholder="Övrig info"></Entry>


   <Image x:Name="HorseImage"
   Source="horse.photo.jpg"
    HeightRequest="100"/>

        <Button
    x:Name="SaveButton"
    Clicked="OnClickedSaveHorse"
    Text="Spara häst"
    BackgroundColor="DarkKhaki"
            BorderColor="Black"
            TextColor="Black"
            WidthRequest="300"></Button>
        
    </VerticalStackLayout>
</ContentPage>