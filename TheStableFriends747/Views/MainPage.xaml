<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheStableFriends747.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image Source ="background.jpg"
                   HeightRequest="300"/>



            <Button
                Text="Hästinfo"
                VerticalOptions="Center"
                Clicked="OnClickedGoHorsePage"
                BackgroundColor="DarkKhaki"
                BorderColor="Black"
                TextColor="Black"
                WidthRequest="300"
                
                />

            <Button
                Text="Anslagstavla"
                VerticalOptions="Center"
                Clicked="OnClickedGoBullentinPage"
                BackgroundColor="DarkKhaki"
                BorderColor="Black"
                TextColor="Black"
                WidthRequest="300"
                />

            <Button
                Text="Vädret"
                VerticalOptions="Center"
                Clicked="OnClickedGoWeatherPage"
                BackgroundColor="DarkKhaki"
                BorderColor="Black"
                TextColor="Black"
                WidthRequest="300"
                />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
