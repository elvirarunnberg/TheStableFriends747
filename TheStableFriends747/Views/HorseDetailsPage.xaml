<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheStableFriends747.Views.HorseDetailsPage"
             Title="HorseDetailsPage">
    <VerticalStackLayout>

        <Label 
      Text="{Binding HorseName}"
      VerticalOptions="Center" 
      HorizontalOptions="Center" />
        <Label 
        Text="{Binding OwnerName}"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Image Source="{Binding ImageSource}"
         HeightRequest="400"
         HorizontalOptions="Center"></Image>
        <Label Text="{Binding Description}" 
         HorizontalOptions="Center"></Label>
        <Label Text="{Binding PhoneNumber}"
         FontSize="15"
         TextColor="Black"
         HorizontalOptions="Center"></Label>
        <Button 
      Text="Ta bort"
      Clicked="OnClickedDeleteHorse"
      BackgroundColor="DarkKhaki"
                BorderColor="Black"
                TextColor="Black"
                WidthRequest="300"
                Margin="0,0,0,10"></Button>
        <Button 
      Text="Ã„ndra"
      Clicked="OnClickedUpdateHorse"
      BackgroundColor="DarkKhaki"
                BorderColor="Black"
                TextColor="Black"
                WidthRequest="300"
                Margin="0,10,0,0"></Button>


    </VerticalStackLayout>
</ContentPage>